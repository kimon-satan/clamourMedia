	<!--    GAMES DEFINED HERE  -->


	<GAME>
		<NAME>debug</NAME>
		<STAGE>
			<COMMAND>
				<ACTION>ADD_TITLE</ACTION>
				<NAME>debug</NAME>
				<TEXT>DEBUG</TEXT>
			</COMMAND>
			<COMMAND>
				<TARGET>allPlayers</TARGET>
				<ACTION>SET_CONTROL</ACTION>
				<CONTROL_TYPE>BIG_TEXT</CONTROL_TYPE>
				<TEXT>DEBUG</TEXT>
			</COMMAND>
		</STAGE>
		<STAGE>
			<PRIORITY>
				<COMMAND>
					<ACTION>END_TITLE</ACTION>
					<NAME>debug</NAME>
				</COMMAND>
				<COMMAND>
					<TARGET>allPlayers</TARGET>
					<ACTION>SET_NODE</ACTION>
					<PRESET>pointerPulse</PRESET>
					<CAN_SLEEP>0</CAN_SLEEP>
				</COMMAND>
			</PRIORITY>
			<PRIORITY>
				<COMMAND>
					<TARGET>allPlayers</TARGET>
					<ACTION>SET_CONTROL</ACTION>
					<CONTROL_TYPE>DRAG_ON_OFF</CONTROL_TYPE>
				</COMMAND>
			</PRIORITY>
			<PRIORITY>
				<COMMAND>
					<TARGET>allPlayers</TARGET>
					<ACTION>DISTRIBUTE_NODES</ACTION>
					<PATTERN>CIRCUM</PATTERN>
					<X>0.5</X><Y>0.5</Y><POS_P>1</POS_P><RADIUS>0.25</RADIUS>
				</COMMAND>
			</PRIORITY>
			<PRIORITY>
				<COMMAND>
					<ACTION>CREATE_ZONE</ACTION>
					<NAME>debug1</NAME>
					<X>0.5</X><Y>0.5</Y><SIZE>0.25</SIZE>
					<ENV_TYPE>AS</ENV_TYPE><ATTACK_SECS>0.01</ATTACK_SECS><DECAY_SECS>1.0</DECAY_SECS>
					<ON_RULE><TYPE>MIN_OCCUPANTS</TYPE><GE>1</GE></ON_RULE>
					<REACT><TYPE>incrementStage</TYPE><TRIG>ON</TRIG></REACT>
					<SOUND_TYPE>brownExploder</SOUND_TYPE>
					<DRAW_TYPE>pauseButton</DRAW_TYPE>
				</COMMAND>
			</PRIORITY>
		</STAGE>
		<STAGE>
			<COMMAND>
				<ACTION>UPDATE_ZONE</ACTION>
				<Z_TARGET>debug1</Z_TARGET>
				<REACT><TYPE>transformNode</TYPE><TRIG>ON</TRIG><PRESET>flickerPulse</PRESET></REACT>
			</COMMAND>
			<COMMAND>
				<TARGET>allPlayers</TARGET>
				<ACTION>DISTRIBUTE_NODES</ACTION>
				<PATTERN>CIRCUM</PATTERN>
				<X>0.5</X><Y>0.5</Y><POS_P>1</POS_P><RADIUS>0.35</RADIUS>
			</COMMAND>
		</STAGE>
		<STAGE>
			<COMMAND>
				<ACTION>UPDATE_ZONE</ACTION>
				<Z_TARGET>debug1</Z_TARGET>
				<REACT><TYPE>decrementStage</TYPE><TRIG>ON</TRIG></REACT>
			</COMMAND>
			<COMMAND>
				<TARGET>allPlayers</TARGET>
				<ACTION>DISTRIBUTE_NODES</ACTION>
				<PATTERN>CIRCUM</PATTERN>
				<X>0.5</X><Y>0.5</Y><POS_P>1</POS_P><RADIUS>0.25</RADIUS>
			</COMMAND>
		</STAGE>
		
		
		<STAGE>
			<COMMAND>
				<TARGET>allPlayers</TARGET>
				<ACTION>SET_CONTROL</ACTION>
				<CONTROL_TYPE>BIG_TEXT</CONTROL_TYPE>
				<TEXT>GAME OVER</TEXT>
			</COMMAND>
		</STAGE>
	</GAME>

