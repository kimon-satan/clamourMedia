<!--    GAMES DEFINED HERE  -->

	<GAME>
		<NAME>synchrony</NAME>
		<STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_CONTROL</ACTION>
				 <CONTROL_TYPE>SMALL_TEXT</CONTROL_TYPE>
				 <TEXT>Please wait for the playtest to begin ...</TEXT>
			</COMMAND>  
		</STAGE>
		<STAGE>
			<COMMAND>
				<ACTION>ADD_TITLE</ACTION>
				<TEXT>Clamour Playtest</TEXT>
				<NAME>clamour</NAME>
			</COMMAND> 
		</STAGE>
		<STAGE>		
			<COMMAND>
				<ACTION>END_TITLE</ACTION>
				<NAME>clamour</NAME>
			</COMMAND>	
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_CONTROL</ACTION>
				 <CONTROL_TYPE>BIG_TEXT</CONTROL_TYPE>
				 <TEXT>Welcome !</TEXT>
			</COMMAND>   
        </STAGE>
        <STAGE>       
			<COMMAND>
				<TARGET>allPlayers</TARGET><ACTION>SET_TEXT</ACTION>
				<TEXT>to this first clamour playtest</TEXT>
			</COMMAND>
		</STAGE>
		<STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_TEXT</ACTION>
					<TEXT>Let's begin</TEXT>
			</COMMAND>
        </STAGE>
        <STAGE>
        	<COMMAND>
				<ACTION>ADD_TITLE</ACTION>
				<TEXT>1. Synchronicity</TEXT>
				<NAME>game1</NAME>
			</COMMAND>
        </STAGE>
		<STAGE>	
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_CONTROL</ACTION>
				 <CONTROL_TYPE>SMALL_TEXT</CONTROL_TYPE>
				 <TEXT>Lets test how synchronous you and your mobile devices are.</TEXT>
			</COMMAND>   
        </STAGE>
        <STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_CONTROL</ACTION>
				 <CONTROL_TYPE>BIG_TEXT</CONTROL_TYPE>
				 <TEXT>From now on ...</TEXT>
			</COMMAND>       
        </STAGE>
        <STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_CONTROL</ACTION>
				 <CONTROL_TYPE>SMALL_TEXT</CONTROL_TYPE>
				 <TEXT>immediately read aloud any text appearing inside quotation marks ...</TEXT>
			</COMMAND>       	
        </STAGE>
        <STAGE>			
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_CONTROL</ACTION>
				 <CONTROL_TYPE>BIG_TEXT</CONTROL_TYPE>
				 <TEXT>Like these " "</TEXT>
			</COMMAND>   
        </STAGE>
        <STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_TEXT</ACTION>
					<TEXT>Do you understand ?</TEXT>
			</COMMAND>
        </STAGE>
        <STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_TEXT</ACTION>
					<TEXT>"Yes"</TEXT>
			</COMMAND>
        </STAGE>
        <STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_TEXT</ACTION>
					<TEXT>very good</TEXT>
			</COMMAND>
        </STAGE>
        <STAGE>
			<COMMAND>
				 <TARGET>allPlayers</TARGET><ACTION>SET_TEXT</ACTION>
					<TEXT>"Thankyou"</TEXT>
			</COMMAND>
        </STAGE>
        
	</GAME>
	
	<GAME>
		<NAME>XY free play</NAME>
		<STAGE>
			<PRIORITY>
				<COMMAND>
					 <TARGET>allPlayers</TARGET><ACTION>SET_CONTROL</ACTION>
					 <CONTROL_TYPE>XY</CONTROL_TYPE>
				</COMMAND> 
			 </PRIORITY>
			 <PRIORITY>
				<COMMAND>
					 <TARGET>allPlayers</TARGET><ACTION>SET_DRAW_TYPE</ACTION>
					 <DRAW_TYPE>1</DRAW_TYPE>
				</COMMAND>
				<COMMAND>
					 <TARGET>allPlayers</TARGET><ACTION>SET_SOUND_TYPE</ACTION>
					 <SOUND_TYPE>pulseGlitcher</SOUND_TYPE>
				</COMMAND>
			 </PRIORITY> 
			<PRIORITY>
				<COMMAND>
					<TARGET>allPlayers</TARGET><ACTION>SET_SOUND_PARAM</ACTION>
					<PARAM>pulseRate</PARAM>
					<MIN_VAL>4</MIN_VAL><MAX_VAL>20</MAX_VAL>
					<ABS_VAL>4</ABS_VAL><MAP_TYPE>1</MAP_TYPE>
				</COMMAND>
			</PRIORITY>
		</STAGE>
	</GAME>


